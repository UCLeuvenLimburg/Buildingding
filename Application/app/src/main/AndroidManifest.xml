<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="buildingding.proximus">

    <uses-feature android:name="android.hardware.camera.autoFocus" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/buildingding_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/buildingding_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.AboutActivity" android:theme="@style/ThemeActionBar" android:label="@string/title_about"/>
        <activity android:name=".view.ChooseLocationsActivity"  android:theme="@style/ThemeActionBar" android:label="@string/title_choose_locations"/>
        <activity android:name=".view.Navigation2DActivity"  android:theme="@style/ThemeActionBar" android:label="@string/title_2D_navigation"/>
        <activity android:name=".view.NavigationTextActivity" android:theme="@style/ThemeActionBar" android:label="@string/title_text_navigation"/>
        <activity android:name=".view.SettingsActivity" android:theme="@style/ThemeActionBar" android:label="@string/title_settings"/>
        <activity android:name=".view.ChooseLanguageActivity" android:theme="@style/ThemeActionBar" android:label="@string/settings_option_language"/>
        <activity android:name=".view.ChooseStartChoice" android:theme="@style/ThemeActionBar" android:label="@string/settings_option_start_choice"/>
        <activity android:name=".view.NavigationActivity" />
        <activity android:name=".view.MenuActivity" />
        <activity android:name=".view.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>